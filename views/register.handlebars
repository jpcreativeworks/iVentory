<main>
    <div class="box1 row">
        <div class="box2 container">
            <div class="sqaure margin col-6">
                <div><br>Login</div>
                <form onsubmit="signupFormHandler(event)">
                <div class="box3">
                    <div class="form-group">
                        <p class="text-end"><label for="name-signup">Name:</label>
                            <input class="form-input" name="name-signup" type="text" />
                        </p>
                    </div>
                    <div class="form-group">
                        <p class="text-end"><label for="id-signup">Employee Id:</label>
                            <input class="form-input" type="text" name="id-signup" />
